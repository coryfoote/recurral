datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Merchant {
  id             String   @id @default(cuid())
  stripeAccountId String   @unique
  perReferral    Int
  discountType   String
  capPercent     Int
  referrals      Referral[]
}

model Referral {
  id              String   @id @default(cuid())
  referrerId      String
  referredId      String
  active          Boolean  @default(true)
  createdAt       DateTime @default(now())
}
